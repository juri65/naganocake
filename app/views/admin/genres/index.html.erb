<div class="container">
    <h4 class="m-4"><span style="background-color:#dddddd">ジャンル一覧・追加</span></h4>
</div>
<div class="container">
    <%= form_with model: [:admin,@genre] do |f| %>
    <div class="row pt-4 pb-4">
        <div class="col-2 text-center">
            <%= f.label :name, "ジャンル名" %>
        </div>
        <div class="col-3">
            <%= f.text_field :name, class:'form-control', placeholder:"ジャンル名" %>
        </div>
        <div class="col-3">
            <%= f.submit '新規登録', class: 'btn btn-success' %>
            <% end %>
        </div>
    </div>
</div>
<div class="container">
    <div class="row pt-4">
        <div class="col-4">
            <table class="table">
                <thead class="thead table-secondary">
                    <tr>
                        <th>ジャンル</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @genres.each do |genre| %>
                    <tr>
                        <th><%= genre.name %></th>
                        <th><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn-sm btn-success' %></th>
                        <th><%= link_to '削除', [:admin,genre], method: :delete, class: "btn-sm btn-danger"%></th>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>