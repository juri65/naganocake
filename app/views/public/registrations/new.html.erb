<div class="container">
  <div class="row">
  <h4 class="col-md-3 mt-4 mb-4">
    <span style="background-color:#dddddd">新規会員登録</span></h4>
   <div class="col-md-10">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "public/shared/error_messages", resource: resource %>
     
     <div class="row mb-3">
       <%= f.label :"名前", class: "col-md-3" %>
       <%= f.label :"(姓)", class: "col-md-1" %>
       <%= f.text_field :last_name, placeholder:"令和", class: "col-md-3" %>
       <%= f.label :"(名)", class: "col-md-1" %>
       <%= f.text_field :first_name, placeholder:"道子", class: "col-md-3" %>
     </div>
     
      <div class="row mb-3">
        <%= f.label :"フリガナ", class: "col-md-3" %>
        <%= f.label :"(セイ)", class: "col-md-1" %>
        <%= f.text_field :last_name_kana, placeholder:"レイワ", class: "col-md-3" %>
        <%= f.label :"(メイ)", class: "col-md-1" %>
        <%= f.text_field :first_name_kana, placeholder:"ミチコ", class: "col-md-3" %>
      </div>

    <div class="row mb-3">
      <%= f.label :メールアドレス, class: "col-md-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class: "offset-md-1 col-md-3" %>
    </div>
    
    <div class="row mb-3">
      <%= f.label :"郵便番号(ハイフンなし)", class: "col-md-3" %>
      <%= f.text_field :postcode, placeholder:"0000000", class: "offset-md-1 col-md-3" %>
    </div>
    
    <div class="row mb-3">
      <%= f.label :"住所", class: "col-md-3" %>
      <%= f.text_field :address, class: "w-100", placeholder:"東京都渋谷区代々木神園町0-0", class: "offset-md-1 col-md-7" %>
    </div>
    
    <div class="row mb-3">
      <%= f.label :"電話番号(ハイフンなし)", class: "col-md-3" %>
      <%= f.text_field :phone_number, placeholder:"0000000000", class: "offset-md-1 col-md-3" %>
    </div>

    <div class="row mb-3">
      <%= f.label :"パスワード(６文字以上)", class: "col-md-3" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "offset-md-1 col-md-3" %>
    </div>

    <div class="row mb-3">
      <%= f.label :"パスワード(確認用)", class: "col-md-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "offset-md-1 col-md-3" %>
    </div>

    <div class="mb-4">
      <%= f.submit "新規登録", class: "offset-md-1 col-md-2 btn btn-outline-success" %>
    </div>
  <% end %>
 </div>
</div>
<div class="mb-3">
  <h4>既に登録済みの方</h4>
</div>
<div class="mb-4">
  <%= link_to "こちら", new_customer_session_path %>からログインしてください。
</div>
</div>