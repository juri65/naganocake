<div class='container'>
    <div class=“row”>
        <h4 class="col-md-3 mt-4 mb-4">
            <span style="background-color:#dddddd">注文情報入力</span>
        </h4>
        <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
        <h4><strong>支払方法</strong></h4>
        <div class="col-5 ml-2">
            <%= f.radio_button :payment_method, 'credit_card' %>
            <%= f.label :payment_method, 'クレジットカード' %>
            
            <%= f.radio_button :payment_method, 'transfer' %>
            <%= f.label :payment_method, '銀行振込' %>
        </div>
        <h4 class="mt-3"><strong>お届け先</strong></h4>
        <div class="col-md-3 ml-2 mt-2">
            <%= f.radio_button :selected_address, "customer_address", checked: true %>
            <%= f.label :"ご自身の住所" %><br>
            〒<%= current_customer.postcode %> <%= current_customer.address %><br>
            <%= current_customer.full_name %><br>
        </div>
        <div class="col-md-3 ml-2 mt-2">
            <%= f.radio_button :selected_address, 'shopping_address' %>
            <%= f.label :"登録済住所から選択" %><br>
            <%= f.select :address_id, options_from_collection_for_select(current_customer.shopping_addresses, :id, :address_display) %><br>
        </div>
        
    </div>
</div>