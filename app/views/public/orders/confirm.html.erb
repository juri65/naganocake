<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="mt-4 mb-4">
            <span style="background-color:#eee">注文情報確認</span>
            </h4>
            <div class="col-md-10">
                <table class="table table-bordered mb-5">
                    <thead>
                        <tr class="table-warning">
                            <th>商品名</th>
                            <th>単価(税込)</th>
                            <th>数量</th>
                            <th>小計</th>
                        </tr>
                        <% @cart_items.each do |cart_item| %>
                        <tr>
                            <td> <%=cart_item.item.name %></td>
                            <td><%=cart_item.item.add_tax_sales_price %></td>
                            <td><%=cart_item.quantity %></td>
                            
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>